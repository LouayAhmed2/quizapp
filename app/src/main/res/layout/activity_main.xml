<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkQuiz"
            android:text="Submit" />

        <LinearLayout
            android:id="@+id/question_3_container"
            style="@style/question_container_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout style="@style/checkbox_group_layout_style">

                    <CheckBox
                        android:id="@+id/question_3_first_checkbox"
                        style="@style/question_checkbox_style"
                        android:text="" />

                    <TextView
                        android:id="@+id/question_3_first_checkbox_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="4"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout style="@style/checkbox_group_layout_style">

                    <CheckBox
                        android:id="@+id/question_3_second_checkbox"
                        style="@style/question_checkbox_style"
                        android:text="" />

                    <TextView
                        android:id="@+id/question_3_second_checkbox_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout style="@style/checkbox_group_layout_style">

                    <CheckBox
                        android:id="@+id/question_3_third_checkbox"
                        style="@style/question_checkbox_style"
                        android:text="" />

                    <TextView
                        android:id="@+id/question_3_third_checkbox_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="7"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                style="@style/question_style"
                android:text="@string/question_3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_4_container"
            style="@style/question_container_style">

            <EditText
                android:id="@+id/question_4_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

            <ImageView
                android:id="@+id/question_4_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/uber_logo" />

            <TextView
                style="@style/question_style"
                android:text="@string/question_4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_5_container"
            style="@style/question_container_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <TextView
                        android:id="@+id/question_5_first_radio_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Born with them"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <TextView
                        android:id="@+id/question_5_second_radio_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Military experiment gone awry"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <TextView
                        android:id="@+id/question_5_third_radio_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Bitten by a radioactive spider"
                        android:textStyle="bold"

                        />

                </LinearLayout>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/question_5_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/question_5_first_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_5_second_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_5_third_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

            </RadioGroup>

            <TextView
                style="@style/question_style"
                android:text="@string/question_5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_6_container"
            style="@style/question_container_style">

            <EditText
                android:id="@+id/question_6_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

            <ImageView
                android:id="@+id/question_6_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/al_ahly_logo" />

            <TextView
                style="@style/question_style"
                android:text="@string/question_6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_7_container"
            style="@style/question_container_style">

            <EditText
                android:id="@+id/question_7_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />

            <ImageView
                android:id="@+id/question_7_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dell_logo" />

            <TextView
                style="@style/question_style"
                android:text="@string/question_7" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/question_2_container"
            style="@style/question_container_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <TextView
                        android:id="@+id/question_2_first_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="17 Year"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <TextView
                        android:id="@+id/question_2_second_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="86 Year"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <TextView
                        android:id="@+id/question_2_third_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="49 Year"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/question_2_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/question_2_first_logo_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_2_second_logo_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_2_third_logo_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

            </RadioGroup>

            <TextView
                style="@style/question_style"
                android:text="@string/question_1" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
